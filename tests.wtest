import objetos.*
import game.*


describe "tests de pizarron"{ 
    method initialize() {
        game.cellSize(40)
        game.width(15)
    	game.height(10)
    }


    test "ir al origen" {
        const origen = game.at(0,5)
        assert.notEquals(origen, pelota.position())
        pelota.irAlOrigen()
        assert.equals(origen, pelota.position())
    }

    test "buscarla" {
        assert.notThat(lionel.posesionDeLaPelota())
        lionel.buscarla()
        assert.that(lionel.posesionDeLaPelota())
    }
    

}